#!/usr/bin/env lua52

local lgi = require("lgi");
local Gtk = lgi.require('Gtk', '3.0');

local mainwindow = require('fimbul.gtk.mainwindow');
local repository = require('fimbul.repository')

local r = repository:new()

wnd = mainwindow:new(r)
wnd:show()

if arg[1] then
   wnd:open_repository(arg[1])
end

Gtk.main()
